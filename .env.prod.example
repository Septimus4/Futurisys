# Production Environment Configuration Template
# Copy this to .env.prod and update with your production values

# Database Configuration
DATABASE_URL=postgresql+psycopg://prod_user:CHANGE_ME@prod_host:5432/energy_prod

# API Security (REQUIRED for production)
API_KEY=your-super-secure-api-key-here

# PostgreSQL Database Configuration (if using docker-compose in production)
POSTGRES_DB=energy_prod
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# Model Configuration
MODEL_ARTIFACT_PATH=model/energy_rf.joblib
MODEL_CARD_PATH=model/model_card.json
MODEL_NAME=sklearn-random-forest

# Logging
LOG_LEVEL=WARNING

# Performance Limits
MAX_SINGLE_REQUEST_SIZE_KB=16
MAX_BATCH_REQUEST_SIZE_MB=1
MAX_BATCH_SIZE=512
INFERENCE_TIMEOUT_SECONDS=5

# Development
DEBUG=false
